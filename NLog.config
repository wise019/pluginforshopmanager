<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 配置目标 -->
  <targets>
    <!-- 文件日志 - 所有级别 -->
    <target xsi:type="File"
            name="allfile"
            fileName="logs/excel-parser-${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/excel-parser-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 错误日志 - 仅错误和致命错误 -->
    <target xsi:type="File"
            name="errorfile"
            fileName="logs/excel-parser-errors-${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/excel-parser-errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="90"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 控制台输出 -->
    <target xsi:type="Console"
            name="console"
            layout="${time} [${uppercase:${level}}] ${logger:shortName=true}: ${message} ${exception:format=shortType}" />

    <!-- 调试输出（Visual Studio输出窗口） -->
    <target xsi:type="Debugger"
            name="debugger"
            layout="${time} [${uppercase:${level}}] ${logger:shortName=true}: ${message}" />

  </targets>

  <!-- 配置规则 -->
  <rules>
    <!-- 所有日志级别写入到allfile -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- 错误和致命错误写入到errorfile -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- 信息级别及以上写入到控制台 -->
    <logger name="*" minlevel="Info" writeTo="console" />

    <!-- 调试模式下，调试级别及以上写入到调试器 -->
    <logger name="*" minlevel="Debug" writeTo="debugger" />

    <!-- 可以为特定的类设置不同的日志级别 -->
    <!-- 例如：只记录ExcelParser类的Info级别及以上 -->
    <!-- <logger name="ExcelToStore.ExcelParser" minlevel="Info" writeTo="allfile" final="true" /> -->

    <!-- 排除某些嘈杂的日志 -->
    <!-- <logger name="System.*" finalMinLevel="Warn" /> -->
  </rules>

</nlog>